@model doctorhubBusinessEntities.Blog
@{
    List<doctorhubBusinessEntities.Blog> Blogist = new doctorhubDataAccess.DirectoryDataAccess().GetpopularBlog();
}
<style type="text/css">
    .more {
        /*width: 400px;
    background-color: #f0f0f0;
    margin: 10px;*/
    }

    .morecontent span {
        display: none;
    }
</style>
<div class="popular-post-sidebar">
    <h2 class="text-center">MOST POPULAR BLOG</h2>
    <hr>
    <div class="favorite-links">
        <ul>
            @foreach (var cp in Blogist)
            {
                <li style="width:188px;" class="more">@Html.Raw(@cp.Message)</li>@cp.BlogBy
            }
        </ul>
    </div>
    <!-- end favorite links -->
</div>

<script type="text/javascript">
    $(function () {
        var showChar = 100, showtxt = "more", hidetxt = "less";
        $('.more').each(function () {
            var content = $(this).text();
            if (content.length > showChar) {
                var con = content.substr(0, showChar);
                var hcon = content.substr(showChar, content.length - showChar);
                var txt = con + '<span class="dots">...</span><span class="morecontent"><span>' + hcon + '</span>&nbsp;&nbsp;<a href="" class="moretxt">' + showtxt + '</a></span>';
                $(this).html(txt);
            }
        });
        $(".moretxt").click(function () {
            if ($(this).hasClass("sample")) {
                $(this).removeClass("sample");
                $(this).text(showtxt);
            } else {
                $(this).addClass("sample");
                $(this).text(hidetxt);
            }
            $(this).parent().prev().toggle();
            $(this).prev().toggle();
            return false;
        });
    });
</script>

