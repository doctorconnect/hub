<div>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Followers and Following Peoples List </h4>
    </div>
    <div class="modal-body">
        @if (ViewBag.listOfFollowers != null)
        {
            <table>
                @foreach (var list in ViewBag.listOfFollowers)
                {
                    <tr style="color:aqua">
                        <td>
                            <a href="/User/UserProfile?Usercode=@list.UserCode">@list.UserName</a><hr />
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
</div>

